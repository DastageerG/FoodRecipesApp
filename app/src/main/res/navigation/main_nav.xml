<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/recipesFragment">

    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.example.foodrecipes.mainActivityFragments.recipesFrag.RecipesFragment"
        android:label="@string/recipes"
        tools:layout="@layout/fragment_recipes" >
        <action
            android:id="@+id/action_recipesFragment_to_bottomSheetDialog"
            app:destination="@id/bottomSheetDialog" />
        <argument
            android:name="backFromBottomSheet"
            app:argType="boolean"
            android:defaultValue="false"
            />
        <action
            android:id="@+id/action_recipesFragment_to_detailsActivity"
            app:destination="@id/detailsActivity" />
    </fragment>
    <fragment
        android:id="@+id/favouriteRecipesFragment"
        android:name="com.example.foodrecipes.mainActivityFragments.favouriteRecipesFrag.FavouriteRecipesFragment"
        android:label="@string/fv_recipes"
        tools:layout="@layout/fragment_favourite_recipes" />
    <fragment
        android:id="@+id/foodJokeFragment"
        android:name="com.example.foodrecipes.mainActivityFragments.foodJokeFrag.FoodJokeFragment"
        android:label="@string/food_joke"
        tools:layout="@layout/fragment_food_joke" />

    <dialog
        android:id="@+id/bottomSheetDialog"
        android:name="com.example.foodrecipes.mainActivityFragments.recipesFrag.bottomSheet.BottomSheetDialog"
        android:label="fragment_bottom_sheet_dailogue"
        tools:layout="@layout/bottom_sheet_dailogue" >
        <action
            android:id="@+id/action_bottomSheetDialog_to_recipesFragment"
            app:destination="@id/recipesFragment" />
    </dialog>
    <activity
        android:id="@+id/detailsActivity"
        android:name="com.example.foodrecipes.DetailsActivity"
        android:label="activity_details"
        tools:layout="@layout/activity_details" >
        <argument
            android:name="recipeDetails"
            app:argType="com.example.foodrecipes.data.model.RecipeResult" />
    </activity>
</navigation>