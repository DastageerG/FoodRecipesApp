<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:strokeColor="@color/strokeColor"
    android:layout_margin="10dp"
    app:strokeWidth="1dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardBackGroundColor"
        android:elevation="2dp"
        >
        <View
            android:id="@+id/white_background"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />
        <ImageView
            android:id="@+id/imageViewIngredientsItemsRowIngredientImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_alignStart="@id/white_background"
            android:layout_alignEnd="@id/white_background"
            android:layout_alignTop="@id/white_background"
            android:layout_alignBottom="@id/white_background"
            />
            <TextView
                android:id="@+id/textViewIngredientsRowLayoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/courgette"
                android:textColor="@color/titleColor"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_toEndOf="@id/imageViewIngredientsItemsRowIngredientImg"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                />

        <TextView
            android:id="@+id/textViewIngredientsRowLayoutAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewIngredientsRowLayoutName"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/imageViewIngredientsItemsRowIngredientImg"
            android:text="100"
            android:textColor="@color/descriptionColor" />

        <TextView
            android:id="@+id/textViewIngredientsRowLayoutUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewIngredientsRowLayoutName"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/textViewIngredientsRowLayoutAmount"
            android:text="Grams"
            android:textColor="@color/descriptionColor" />

        <TextView
            android:id="@+id/textViewIngredientsRowLayoutConsistency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewIngredientsRowLayoutAmount"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/imageViewIngredientsItemsRowIngredientImg"
            android:text="Consistency"
            android:textColor="@color/descriptionColor" />


        <TextView
            android:id="@+id/textViewIngredientsRowLayoutOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewIngredientsRowLayoutConsistency"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/imageViewIngredientsItemsRowIngredientImg"
            android:text="Original"

            android:textColor="@color/descriptionColor" />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>